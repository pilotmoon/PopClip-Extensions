{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2023", "dom", "dom.iterable"],
    "module": "preserve",
    "moduleResolution": "bundler",
    "baseUrl": "./lib",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "allowImportingTsExtensions": true,
    "types": ["node", "@popclip/types"],
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["./lib", "./source", "./contrib"]
}
