<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Extension Identifier</key>
	<string>com.pilotmoon.popclip.extension.doi</string>
	<key>Extension Name</key>
	<string>DOI</string>
	<key>Extension Description</key>
	<dict>
		<key>en</key>
		<string>Resolve a Digital Object Identifier (DOI) using doi.org.</string>
	</dict>
	<key>Actions</key>
	<array>
		<dict>
			<key>Title</key>
			<string>DOI</string>
			<key>Image File</key>
			<string>doi.png</string>
			<key>Regular Expression</key>
			<string>10\.[^\s]+\/[^\s]*\w</string>
			<key>URL</key>
			<string>http://dx.doi.org/{popclip text}</string>
		</dict>
	</array>
	<key>Apps</key>
	<array>
		<dict>
			<key>Link</key>
			<string>http://www.doi.org/</string>
			<key>Name</key>
			<string>doi.org</string>
		</dict>
	</array>
</dict>
</plist>
