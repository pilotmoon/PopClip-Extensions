<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Actions</key>
	<array>
		<dict>
			<key>Image File</key>
			<string>deepl.png</string>
			<key>Regular Expression</key>
			<string>(?s)^.{1,1900}$</string>
			<key>Title</key>
			<string>DeepL Translator</string>
			<key>URL</key>
			<string>https://www.deepl.com/translator#en/{popclip option lang}/{popclip text}</string>
		</dict>
	</array>
	<key>Extension Description</key>
	<string>Open DeepL Translator in a web browser with the selected text.</string>
	<key>Extension Identifier</key>
	<string>com.pilotmoon.popclip.extension.deepl-translator</string>
	<key>Extension Name</key>
	<string>DeepL Translator</string>
	<key>Apps</key>
	<array>
		<dict>
			<key>Link</key>
			<string>https://deepl.com/translator</string>
			<key>Name</key>
			<string>DeepL Translator</string>
		</dict>
	</array>
	<key>Options</key>
	<array>
		<dict>
			<key>Option Default Value</key>
			<string>de</string>
			<key>Option Identifier</key>
			<string>lang</string>
			<key>Option Label</key>
			<dict>
				<key>en</key>
				<string>Output Language</string>
			</dict>
			<key>Option Type</key>
			<string>multiple</string>
			<key>Option Values</key>
			<array>
				<string>de</string>
				<string>fr</string>
				<string>es</string>
				<string>it</string>
				<string>nl</string>
				<string>pl</string>
			</array>
		</dict>
	</array>
	<key>Options Title</key>
	<dict>
		<key>en</key>
		<string>Choose the language to translate into.</string>
	</dict>
</dict>
</plist>
