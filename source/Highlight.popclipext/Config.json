{
  "popclipVersion": 3895,
  "identifier": "com.pilotmoon.popclip.extension.highlight",
  "name": "Highlight",
  "icon": "hlite.png",
  "actions": [
    {
      "keyCombo": "control command H",
      "requiredApps": [
        "com.apple.Preview",
        "net.sourceforge.skim-app.skim",
        "com.evernote.Evernote",
        "com.readdle.PDFExpert-Mac",
        "md.obsidian",
        "com.ngocluu.goodlinks"
      ]
    },
    {
      "keyCombo": "shift command H",
      "requiredApps": [
        "com.literatureandlatte.scrivener2",
        "com.literatureandlatte.scrivener3",
        "com.apple.iWork.Pages",
        "com.electron.logseq"
      ]
    },
    {
      "keyCombo": "shift command L",
      "requiredApps": [
        "com.devon-technologies.thinkpro2",
        "com.devon-technologies.think3",
        "com.devon-technologies.think",
        "com.Alternote"
      ]
    },
    {
      "keyCombo": "shift command U",
      "requiredApps": ["pro.writer.mac", "net.ia.presenter"]
    },
    {
      "keyCombo": "option shift command 1",
      "requiredApps": ["com.smileonmymac.PDFpenPro", "com.smileonmymac.PDFpen"]
    },
    {
      "keyCombo": "shift command e",
      "requiredApps": ["com.apple.Notes"]
    }
  ],
  "description": "Highlight the selected text. Works in Pages, Preview, Alternote, DevonThink, Evernote, Goodlinks, iA Writer, iA Presenter, LogSeq, Obsidian, PDFpen, PDF Expert, Scrivener, Skim and Apple Notes only."
}
