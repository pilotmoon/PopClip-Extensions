{
  "name": "Terminal",
  "identifier": "com.pilotmoon.popclip.extension.rtc",
  "description": "Run the selected text as a command in the active terminal window with optional prepend/append text. Supports Terminal, iTerm2, Warp and Ghostty.",
  "keywords": "terminal iterm2 warp ghostty run command",
  "popclip version": 4151,
  "icon": "RTC.png",
  "actions": [
    {
      "requirements": ["text", "option-term=Terminal"],
      "applescript file": "terminal.applescript"
    },
    {
      "requirements": ["text", "option-term=iTerm2 v2.9+"],
      "applescript file": "iterm2.applescript",
      "app": {
        "name": "iTerm2",
        "link": "http://www.iterm2.com/",
        "bundleIdentifiers": ["com.googlecode.iterm2"],
        "checkInstalled": false
      }
    },
    {
      "requirements": ["text", "option-term=Warp"],
      "applescript file": "warp.applescript",
      "app": {
        "name": "Warp",
        "link": "https://www.warp.dev/",
        "bundleIdentifiers": ["dev.warp.Warp-Stable"],
        "checkInstalled": false
      }
    },
    {
      "requirements": ["text", "option-term=Ghostty"],
      "applescript file": "ghostty.applescript",
      "app": {
        "name": "Ghostty",
        "link": "https://ghostty.org/",
        "bundleIdentifiers": ["com.mitchellh.ghostty"],
        "checkInstalled": false
      }
    },
      {
      "requirements": ["text", "option-term=kitty"],
      "applescript file": "kitty.applescript",
      "app": {
        "name": "kitty",
        "link": "https://sw.kovidgoyal.net/kitty/",
        "bundleIdentifiers": ["net.kovidgoyal.kitty"],
        "checkInstalled": false
      }
    }
  ],
  "options": [
    {
      "label": "Terminal Emulator",
      "type": "multiple",
      "values": ["Terminal", "iTerm2 v2.9+", "Warp", "Ghostty", "kitty"],
      "valueLabels": ["Terminal", "iTerm2", "Warp", "Ghostty", "kitty"],
      "identifier": "term"
    },
    {
      "label": "Prepend Command",
      "type": "string",
      "identifier": "prepend",
      "description": "Text to insert before the selected text (optional)"
    },
    {
      "label": "Append Command",
      "type": "string",
      "identifier": "append",
      "description": "Text to insert after the selected text (optional)"
    },
    {
      "label": "Use New Tab",
      "type": "boolean",
      "identifier": "newtab",
      "description": "Open command in a new tab instead of current tab",
      "defaultValue": false
    }
  ]
}
