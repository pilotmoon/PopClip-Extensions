<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Actions</key>
	<array>
		<dict>
			<key>After</key>
			<string>paste-result</string>
			<key>Image File</key>
			<string>shortlink.png</string>
			<key>Requirements</key>
			<array>
				<string>httpurl</string>
			</array>
			<key>Script Interpreter</key>
			<string>/usr/bin/php</string>
			<key>Shell Script File</key>
			<string>isgd.php</string>
			<key>Title</key>
			<string>Shorten Link</string>
		</dict>
	</array>
	<key>Extension Description</key>
	<string>Shorten the selected URL using is.gd or v.gd.</string>
	<key>Note</key>
    <string>Not yet compatible with macOS 12.0 Beta.&lt;a href=&quot;/blog/2021/09/15/popclip-macos-monterey&quot;&gt;(More info)&lt;/a&gt;</string>
	<key>Extension Identifier</key>
	<string>com.pilotmoon.popclip.extension.urlshortener</string>
	<key>Extension Name</key>
	<string>Shorten Link</string>
	<key>Apps</key>
	<array>
		<dict>
			<key>Link</key>
			<string>https://is.gd/</string>
			<key>Name</key>
			<string>is.gd</string>
		</dict>
		<dict>
			<key>Link</key>
			<string>https://v.gd/</string>
			<key>Name</key>
			<string>v.gd</string>
		</dict>		
	</array>
	<key>Options</key>
	<array>
		<dict>
			<key>Option Identifier</key>
			<string>domain</string>
			<key>Option Label</key>
			<dict>
				<key>en</key>
				<string>Shortening Service</string>
			</dict>
			<key>Option Type</key>
			<string>multiple</string>
			<key>Option Values</key>
			<array>				
				<string>is.gd</string>
				<string>v.gd</string>
			</array>
		</dict>
	</array>
</dict>
</plist>
